<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorAccent</item>
        <item name="android:button">@null</item>
        <item name="android:textAppearance">@style/ChipLabel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">6dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="ChipLabel" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>